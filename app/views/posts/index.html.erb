<% if session[:user_id].nil? %>
  <h3>Sign in</h3>
  <%= form_for @user, url: "/users/sign_in",method: :post do |f| %>
    <%= f.text_field "username"  %>
    <%= f.password_field "password"  %>
    <%= f.submit %>
    <hr />
  <% end %>
<% end %>

<h1>Listing posts</h1>

<a href="/posts/new">/posts/new</a>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.body %></td>
      <td><a href="/posts/show/<%= post.id %>">show</a></td>
      <td><a href="/posts/edit/<%= post.id %>">edit</a></td>
      <td><a href="/posts/destroy/<%= post.id %>" data-confirm="are you sure?">destroy</a></td>
    </tr>
  <% end %>
</table>
